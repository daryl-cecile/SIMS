            itemReference: "wbp5b"
        }) );

        productCollection.addItem( new BasketItem({
            name: "Whiteboard Pens 4 Pack (Red)",
            description: "Dry-erase whiteboard pens",
            quantity: 30,
            itemReference: "wbp4r"
        }) );


        basket.attachCollection(itemCollection);
        product.attachCollection(productCollection);


	</script>


</body>
</html>