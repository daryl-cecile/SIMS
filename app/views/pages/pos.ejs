<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/meta') %>
    <title>POS</title>
    <%- include('../partials/imports') %>
    <link rel="stylesheet" href="/public/styles/flex.css">
	<link rel="stylesheet" href="/public/styles/xbasket.css">

	<script src="/public/scripts/XBasket.js"></script>
	
</head>
<body>
    <%- include('../partials/nav', {isAdmin:false}) %>

    <div id="main-container" class="f h s-1 limit-height-100">

        <x-basket id="basket" class="f w-third"></x-basket>

        <div class="f w-half">
    
    
            <label class="input f">
                <span>Find Item</span>
                <smart-input name="utid" placeholder=""></smart-input>
            </label>
        
    
            <x-product id="product" class="f"></x-product>
        </div>

    </div>

            


    <%- include('../partials/footer') %>

    <script>

        let basket = $("#basket").get(0);
        let itemCollection = new BasketCollection();

        itemCollection.addItem( new BasketItem({
