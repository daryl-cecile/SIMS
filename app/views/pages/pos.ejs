<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/meta') %>
    <title>POS</title>
    <%- include('../partials/imports') %>
	<link rel="stylesheet" href="/public/styles/xbasket.css">

    <script src="/public/scripts/XCatalog.js"></script>
    <script src="/public/scripts/XBasket.js"></script>
</head>
<body>

    <section class="f h subtle-bg" style="overflow: hidden">
        <x-basket id="basket"></x-basket>

        <div class="f v greedy relative">
            <%- include('../partials/nav', {isAdmin:false}) %>
            <section class="padded">
                <smart-input name="find" placeholder="Find Item" type="search"></smart-input>

                <x-catalog id="catalog"></x-catalog>
            </section>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script>

        let basket = $("#basket").get(0);
        let catalog = $("#catalog").get(0);
        let itemCollection = new BasketCollection();
        let catalogCollection = new CatalogCollection();

        function seedBasket(){
            itemCollection.addItem( new BasketItem({
                name: "Whiteboard Pens",
                description: "3 Pack (Black)",
                quantity: 30,
                itemReference: "wbp3k"
            }) );

            itemCollection.addItem( new BasketItem({
                name: "Whiteboard Pens",
                description: "5 Pack (Blue)",
                quantity: 30,
                itemReference: "wbp5b"
            }) );

            itemCollection.addItem( new BasketItem({
                name: "Whiteboard Pens",
                description: "4 Pack (Red)",
                quantity: 30,
                itemReference: "wbp4r"
            }) );

            itemCollection.addItem( new BasketItem({
                name: "Blu-Tack",
                quantity: 12,
                itemReference: "bts0x"
            }) );

            itemCollection.addItem( new BasketItem({
                name: "White-Tack",
                quantity: 20,
                itemReference: "wts0x"
            }) );

            itemCollection.addItem( new BasketItem({
                name: "A3 Cardboard",
                quantity: 8,
                itemReference: "acb0x"
            }) );

            basket.attachCollection(itemCollection);
        }
        function seedCatalog(){
            catalogCollection.addItem( new CatalogItem({
                name: "Whiteboard Pens",
                description: "3 Pack (Black)",
                itemReference: "wbp3k"
            }) );

            catalogCollection.addItem( new CatalogItem({
                name: "Whiteboard Pens",
                description: "5 Pack (Blue)",
                itemReference: "wbp5b"
            }) );

            catalogCollection.addItem( new CatalogItem({
                name: "Whiteboard Pens",
                description: "4 Pack (Red)",
                itemReference: "wbp4r"
            }) );

            catalogCollection.addItem( new CatalogItem({
                name: "Blu-Tack",
                itemReference: "bts0x"
            }) );

            catalogCollection.addItem( new CatalogItem({
                name: "White-Tack",
                itemReference: "wts0x"
            }) );

            catalogCollection.addItem( new CatalogItem({
                name: "A3 Cardboard",
                itemReference: "acb0x"
            }) );

            catalog.attachCollection(catalogCollection);
        }

        seedCatalog();
        seedBasket();

	</script>


</body>
</html>